<!DOCTYPE html>
  <head>
  	<meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title><%= @page_title ? @page_title : 'Welcome'%> | The Bookstore</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  	 <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Bookstore</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="<%= params[:controller]=='books' ? 'active' : ''%>"><%= link_to 'Home', root_path%></li>
            <li class="<%= params[:controller]=='about' ? 'active' : ''%>"><%= link_to 'About', about_path%></li>          
          </ul>
          <ul class="nav navbar-right">
              <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Manage <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Categories',categories_path%></li>
                <li><%= link_to 'Authors',authors_path%></li>
                <li><%= link_to 'Publishers',publishers_path%></li>
                <li role="separator" class="divider"></li>
              </ul>
            </li>
            </ul>
          <ul class="nav navbar-right">
              <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Add new <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Book',new_book_path%></li>
                <li><%= link_to 'Category',new_category_path%></li>
                <li><%= link_to 'Author',new_author_path%></li>
                <li><%= link_to 'Publisher',new_publisher_path%></li>
                <li role="separator" class="divider"></li>
              </ul>
            </li>
            </ul>                 
           
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <header>
    	<div class="container">
    		<h1>The Bookstore <small><%= @page_title ? @page_title : 'Welcome'%></small></h1>
    	</div>
    </header>

    <section>
    	<div class="container">
    		 <div class="row">
    		 	<div class="col-md-8">

            <!-- Alerts message -->
            <% if flash[:notice]%>
            <div class="alert alert-success">
                <%= flash[:notice]%>
              </div>
            <% end %>
            <% if flash[:alert]%>
            <div class="alert alert-danger">
              <%= flash[:alert]%>
            </div>
            <% end %>
    		 		<%= yield %>
    		 	</div>
    		 	<div class="col-md-4">
    		 		<%= render'partials/sidebar'%>
    		 	</div>
    		 </div> 
    	</div>
    	
    </section>

    <footer>
    	<div class="container">
    		<p>Copyright &copy; 2018, Allrights reserved by Onze</p>
    	</div>
    </footer>
  </body>
</html>
